# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# GOOGLE SHEETS CONFIGURATION
# =============================================================================
# Path to your Google Cloud service account credentials JSON file
GOOGLE_SHEETS_CREDENTIALS_FILE=path/to/your/credentials.json

# Your Google Sheets spreadsheet ID (found in the URL)
SPREADSHEET_ID=your_spreadsheet_id_here

# =============================================================================
# API KEYS (Optional - for enhanced data collection)
# =============================================================================
# FanGraphs API key (if available)
FANGRAPHS_API_KEY=your_fangraphs_api_key

# Baseball Reference API key (if available)
BASEBALL_REFERENCE_API_KEY=your_bref_api_key

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# Slack webhook URL for notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email configuration for notifications
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=notifications@yourdomain.com

# =============================================================================
# WEB DASHBOARD CONFIGURATION
# =============================================================================
# Flask secret key for session management
FLASK_SECRET_KEY=your_very_secure_secret_key_here

# Dashboard port (default: 5000)
DASHBOARD_PORT=5000

# Dashboard host (default: localhost)
DASHBOARD_HOST=localhost

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite database file path
DATABASE_PATH=data/mlb_analytics.db

# =============================================================================
# AUTOMATION SETTINGS
# =============================================================================
# Enable/disable automated scheduling
AUTO_SCHEDULING_ENABLED=true

# Morning update time (24-hour format)
MORNING_UPDATE_TIME=08:00

# Pre-game update time offset (minutes before first game)
PREGAME_UPDATE_OFFSET=60

# Enable live game updates
LIVE_UPDATES_ENABLED=true

# Live update interval (minutes)
LIVE_UPDATE_INTERVAL=5

# =============================================================================
# ERROR HANDLING & RATE LIMITING
# =============================================================================
# Maximum retry attempts for failed requests
MAX_RETRY_ATTEMPTS=3

# Retry delay in seconds
RETRY_DELAY=5

# Rate limiting: requests per minute
RATE_LIMIT_PER_MINUTE=60

# Circuit breaker: failure threshold
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5

# =============================================================================
# MACHINE LEARNING SETTINGS
# =============================================================================
# Enable ML predictions
ML_PREDICTIONS_ENABLED=true

# Model retraining frequency (days)
MODEL_RETRAIN_FREQUENCY=7

# Minimum games for model training
MIN_TRAINING_GAMES=100

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/mlb_analytics.log

# Enable colored console logging
COLORED_LOGS=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Enable security scanning
SECURITY_SCANNING_ENABLED=true

# API rate limiting
API_RATE_LIMIT=100

# Session timeout (minutes)
SESSION_TIMEOUT=30

# =============================================================================
# CLOUD DEPLOYMENT (Optional)
# =============================================================================
# Environment (development, staging, production)
ENVIRONMENT=development

# Cloud provider (heroku, aws, gcp, azure)
CLOUD_PROVIDER=heroku

# Production database URL (if using cloud database)
DATABASE_URL=your_production_database_url

# Redis URL for caching (optional)
REDIS_URL=redis://localhost:6379

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Enable performance monitoring
PERFORMANCE_MONITORING=true

# Health check endpoint enabled
HEALTH_CHECK_ENABLED=true

# Metrics collection enabled
METRICS_COLLECTION=true
